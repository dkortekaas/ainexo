# Database
DATABASE_URL="postgresql://user:password@localhost:5432/ai-chat?schema=public"

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here-min-32-chars

# Encryption (REQUIRED - Generate with: openssl rand -hex 32)
# CRITICAL: Must be at least 32 characters for AES-256 encryption
# Used for encrypting 2FA secrets and sensitive data
ENCRYPTION_KEY=

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key-here

# Email (Resend)
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=re_your-resend-api-key-here
# IMPORTANT: This email address must be verified in Resend
# Add and verify your domain at: https://resend.com/domains
# Use format: noreply@yourdomain.com or no-reply@yourdomain.com
RESEND_FROM_EMAIL=noreply@yourdomain.com

# reCAPTCHA
RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# Stripe (Payment)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-key
STRIPE_SECRET_KEY=sk_test_your-stripe-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Stripe Price IDs (Required for subscriptions)
# Create these in Stripe Dashboard -> Products -> Add Product -> Add Pricing
STRIPE_STARTER_PRICE_ID=price_your-starter-price-id
STRIPE_PROFESSIONAL_PRICE_ID=price_your-professional-price-id
STRIPE_ENTERPRISE_PRICE_ID=price_your-enterprise-price-id

# Mollie (Alternative Payment)
MOLLIE_API_KEY=test_your-mollie-api-key

# Optional: Embedding configuration
EMBEDDINGS_ENABLED=true

# Optional: Environment
NODE_ENV=development

# Cron Job Secret (for subscription notifications)
# Generate with: openssl rand -hex 32
CRON_SECRET=your-cron-secret-here

# Subscription Grace Period (in days, default: 3)
# Users can still access premium features during this period after expiration
SUBSCRIPTION_GRACE_PERIOD_DAYS=3

# Sentry (Error Tracking)
# Get your DSN from: https://sentry.io/settings/projects/your-project/keys/
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/your-project-id
SENTRY_DSN=https://your-sentry-dsn@sentry.io/your-project-id
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=your-sentry-project
# Auth token for uploading source maps (only needed for CI/CD)
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Upstash Redis (Rate Limiting & Caching)
# Get credentials from: https://console.upstash.com/
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-rest-token

# Sanity CMS
# Create a project at: https://www.sanity.io/manage
# Get Project ID from: https://www.sanity.io/manage/project/YOUR_PROJECT_ID
NEXT_PUBLIC_SANITY_PROJECT_ID=your-sanity-project-id
NEXT_PUBLIC_SANITY_DATASET=production
NEXT_PUBLIC_SANITY_API_VERSION=2025-12-25

# SECURITY NOTES:
# 1. Never commit the .env file to version control
# 2. Generate ENCRYPTION_KEY with: openssl rand -hex 32
# 3. Change all default passwords immediately
# 4. Use strong, unique keys for each environment
# 5. Rotate keys regularly in production
